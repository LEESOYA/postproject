<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/header.css">
  <link rel="stylesheet" href="/stylesheets/postDetail.css">
  <title>detail</title>
</head>
<body>

  <% include ../header %>

  <section class="detail-page">
    <% postData.forEach(item=> { %>
      <section class="detail-wrap">
        <section class="title">
          <span>
            <%= item.title %>
          </span>
        </section>
        <section class="writer">
          <span>
            <%= item.writer %>
          </span>
        </section>
        <section class="hashtags">
          <ul>
            <li>
              <%= item.hashtag %>
            </li>
            <!-- <li>#tag2</li> -->
          </ul>
        </section>
        <section class="thumbnail">
          <img src="<%=item.image%>" alt="thumbnail">
        </section>
        <section class="main_text">
          <p>
            <%= item.main_text %>
          </p>
        </section>
      </section>
      
      <!-- 내 게시글일때 -->
      <section class="post-btn">
        <% if(userId === item.userId) { %>
          <button onclick="location.href='/post/postUpdate/<%=item.id%>'">게시물 수정</button>
          <form action="/post/delete/<%=item.id%>" method="post">
            <button class="deleteBtn" type="submit">삭제하기</button>
          </form>
          <% } %>
      </section>
      <!-- 댓글 -->
      <section class="detail-comment">
        <div class="comment-box">
          <!-- <input type="text" name="comment" class="comment"> -->
          <textarea name="comment" class="comment"></textarea>
          <button type="button" class="comment-submit" onclick="commentSubmit(<%=item.id%>);">댓글 달기</button>
        </div>
          <div class="comment-content">
            <ul class="comment-ul"> 
              <% commentUser.forEach(comm=> { %>
              <li class="comment-list">
                <div class="comm-info">
                  <span class="comm-userId">
                    <%=comm.account %>
                  </span>
                  <span class="comm-time">
                    <%= (comm.time).toLocaleString() %>
                  </span>
                  <div class="comm-btn">
                    <% if(userId === comm.account) { %>
                      <form action="/post/commDelete/<%=item.id%>/<%=comm.commentId%>" method="post">
                        <button class="comm-delBtn" type="submit">삭제</button>
                      </form>
                      <button class="comm-updateBtn">수정</button>
                    <% } %>
                  </div>
                </div>
                <span class="comm-comment">
                  <%= comm.comment %>
                </span>
              </li>
              <% }) %>
            </ul>
          </div>
      </section>
    <% }) %>
  </section>
  <script src="/javascripts/post/postComment.js"></script>
</body>
</html>